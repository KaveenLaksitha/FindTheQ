<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StationListView">

    <LinearLayout
        android:id="@+id/linearviewimage"
        android:layout_width="match_parent"
        android:layout_height="180dp"

        >
        <EditText
            android:id="@+id/FuelTypeUpdateInput"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/border"
            android:drawablePadding="20dp"
            android:hint="Search ... "
            android:inputType="textPersonName"
            android:padding="8dp"
            android:textSize="14sp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/fuelStationListLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Station List"
        android:layout_below="@id/linearviewimage"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />


    <ListView
        android:id="@+id/stationListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_below="@id/linearviewimage"
        />

</RelativeLayout>