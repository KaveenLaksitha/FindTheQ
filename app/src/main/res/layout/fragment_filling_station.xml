<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FillingStationFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="368dp"
        android:layout_height="600dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/border"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="550dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:padding="24dp">

    <EditText
        android:id="@+id/stationid"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="19dp"
        android:ems="10"
        android:hint="Station ID" />

    <EditText
        android:id="@+id/ownername"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stationid"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="21dp"
        android:ems="10"
        android:hint="Owner Name" />

    <EditText
        android:id="@+id/stationname"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ownername"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:hint="Station Name" />

    <EditText
        android:id="@+id/stationaddress"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stationname"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:hint="Address" />

    <EditText
        android:id="@+id/ownerphonenumber"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stationaddress"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="22dp"
        android:ems="10"
        android:hint="Phone Number" />

    <Button
        android:id="@+id/btnstationRegister"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="164dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="45dp"
        android:text="Register" />

    </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>