<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FillingStationFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="368dp"
        android:layout_height="640dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/border"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="15dp">

            <EditText
                android:id="@+id/stationid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:drawableStart="@drawable/icons8_gas"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Station ID"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/ownername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:drawableStart="@drawable/icons_person2"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Owner Name"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/stationname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:drawableStart="@drawable/icons8_gas_station"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Station Name"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/stationaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:drawableStart="@drawable/icons8_address"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Address"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/ownerphonenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:drawableStart="@drawable/contact"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Phone Number"
                android:minHeight="48dp" />

            <EditText
            android:id="@+id/stationpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:drawableStart="@drawable/icons8_password"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:ems="10"
            android:hint="Password"
            android:minHeight="48dp"
            android:inputType="textPassword"/>

            <Button
                android:id="@+id/btnstationRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Register" />

        </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</RelativeLayout>